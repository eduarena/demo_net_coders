<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_contaner_AoRedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_gravity="center_horizontal"
    tools:context="br.com.example.eduarena.testeviewpager.AoRedorDetalhes">

    <LinearLayout
        android:id="@+id/ll_externo_AoRedor"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_backgroud_ao_redor_detalhes"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_AoRedor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_detalhe_hospt" />

        <LinearLayout
            android:id="@+id/ll_interno_AoRedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detal_aoRedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ao_redor_detalhes_nome_estab" />

            <TextView
                android:id="@+id/tv_tipo_AoRefor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ao_redor_detalhes_tipo_estab" />

            <TextView
                android:id="@+id/tv_end_AoRedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ao_redor_detalhes_endereco_estab" />

            <RatingBar
                android:id="@+id/ratingBarAoRedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
